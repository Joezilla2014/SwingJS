<project name="swingjs" default="fromJSmol" basedir=".">
   			
 <!-- 
 
  starting point for this project is JSmol
  but only Bob should have to do this. We'll see! 
 
  -->
	
  <property name="jmol.path" value="../Jmol" />
  <property name="jsmol.path" value="../JSmol" />
	
  <target name="fromJSmol" id="fromJSmol">

   	<echo>...copying Jmol javajs/ java from Jmol</echo>
   	<copy todir="src" >
      <fileset dir="${jmol.path}/src">
        <include name="javajs/**/*" />
        <exclude name="javajs/swing/*" />
      </fileset>
    </copy>
  	
   	<echo>...copying Jmol srcjs/ java for reference only</echo>
   	<copy todir="srcjs" >
      <fileset dir="${jmol.path}/srcjs">
        <include name="com/**/*.java" />
        <include name="java/**/*.java" />
      </fileset>
    </copy>
  	
   	<copy todir="jsmol/bin" >
      <fileset dir="${jsmol.path}/bin">
        <include name="com/**/*.js" />
        <include name="java/**/*.js" />
      </fileset>
    </copy>

   	<echo>...creating lib/jquery/</echo>
  	<copy todir="lib/jquery">
  	  <fileset dir="${jsmol.path}/lib/jquery">
  	    <include name="**/*" />
  	  </fileset>
    </copy>

   	<echo>...adding jsmol.php</echo>
  	<copy todir="php">
  	  <fileset dir="${jsmol.path}/php">
  	    <include name="**/*" />
  	  </fileset>
    </copy>
  	
  	<!--   holding off on this until progress in SwingJS is put back in JSmol 
   	<echo>...creating jsmol/bin/ (JSmol customized code - JSmol must have been compiled already)</echo>
  	
   	<echo>...creating jsmoljs/ </echo>
   	<copy todir="jsmoljs">
  	  <fileset dir="${jsmol.path}/jsmoljs">		
  	    <include name="core/**/*" />
  	    <include name="j2sjmol.js" />
  	  	<include name="JSmol.js" />
  	    <include name="JSmolCore.js" />
  	  	<include name="JSmolJavaExt.js" />
  	  	<include name="JSmoljQueryExt.js" />
  	  </fileset>
    </copy> 
   	
  
  	-->
  	
  </target>
	

	
	
</project>
